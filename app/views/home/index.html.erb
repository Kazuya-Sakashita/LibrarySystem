<div class="px-5">
	<h1>所蔵一覧</h1>  

	<table class="table">
		<thead>
			<tr>
				<th scope=“col”>タイトル</th>
				<th scope=“col”>著者名</th>
				<th scope=“col”>出版社</th>
				<th scope=“col”>出版日</th>
			</tr>
		</thead>

			<tbody>
			<% @books.each do |book|%>
				<tr>
						<td ><%=link_to book_path(book.id) do %><%= book.book_title %><% end %></td>
						<td><%= book.author_name %></td>
						<td><%= book.publisher %></td>
						<td><%= book.publication_year %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @books, theme: 'bootstrap-5' %>
</div>
